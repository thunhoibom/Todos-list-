generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id           String  @id
  title        String
  is_completed Boolean

  user_ID Int @unique
  user user @relation(fields: [user_ID], references: [userID])
}

model user {
  userID   Int @id @default(autoincrement())
  username String @unique
  password String
  sessions sessions?

  todos Todo[]  
}

model sessions {
  sessionID String @id
  user_ID Int @unique
  user user @relation(fields: [user_ID], references: [userID])
}


